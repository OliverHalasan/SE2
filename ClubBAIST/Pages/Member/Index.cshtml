@page
@model ClubBAIST.Pages.Member.IndexModel
@{
    ViewData["Title"] = "Member Home";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
@if (Model.User.Identity.IsAuthenticated)
{
    var nameClaim = Model.User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name");
                        if (nameClaim != null)
                        {
                            
                        <h2 class="text-center">Welcome,
                                @nameClaim.Value
                        </h2>
                        }

    

                   
}
                </div>
                <div class="card-body">
                    <p class="lead text-center">You are logged in as a member.</p>
                </div>
            </div>
        </div>
    </div>
</div>
