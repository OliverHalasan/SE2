@page
@model ClubBAIST.Pages.Staff.RejectedApplicationModel
@{
    ViewData["Title"] = "Reject Membership Application List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Approval Status</th>
            <th>MemberID</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.ApplicationList)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Email</td>
                <td>@member.DateOfBirth.ToShortDateString()</td>
                <td>@if(member.Approved == "D")
                    {
                        <span>Rejected</span>
                    }
                    else
                  if (member.Approved == "A")
                    {
                        <span>Approved</span>
                    }
                    else
                   if (member.Approved == "W")
                    {
                        <span>Waiting List</span>
                    }
                </td>
                <td><a class="btn btn-primary btn-sm" asp-page="./MembershipApplication" asp-route-id="@member.MemberID">View Application</a></td>
            </tr>
        }
    </tbody>
</table>
