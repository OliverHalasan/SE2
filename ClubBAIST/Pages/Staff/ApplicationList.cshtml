@page
@model ClubBAIST.Pages.Staff.ApplicationListModel
@{
    ViewData["Title"] = "Membership Application List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Membership Type</th>
            <th>Approval Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.ApplicationList)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Email</td>
                <td>@member.DateOfBirth.ToShortDateString()</td>
                <td>@member.MembershipTypeID</td>
                <td>@member.Approved</td>
            </tr>
        }
    </tbody>
</table>
